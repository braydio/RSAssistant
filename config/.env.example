# -- The RSAssistant Bot Token
BOT_TOKEN=
# -- The channel with auto-rsa bot
DISCORD_PRIMARY_CHANNEL=
# -- Nasdaq Corporate Actions RSS Feed
DISCORD_SECONDARY_CHANNEL=
# -- Reverse split summaries + snippets destination
DISCORD_TERTIARY_CHANNEL=

# --- OpenAI reverse-split parsing (optional) ---
# API key used to parse reverse split notices into structured data
OPENAI_API_KEY=
# Override the default model used for parsing
OPENAI_MODEL=gpt-4o-mini
# Request timeout in seconds
OPENAI_TIMEOUT_SECONDS=20

# Optional path to the persistent data directory. Defaults to
# 'RSAssistant/volumes' when unset.
VOLUMES_DIR=

# --- Auto holdings + monitor (optional) ---
# Trigger '!rsa holdings all' after each watchlist reminder
AUTO_REFRESH_ON_REMINDER=false
# Alert when detected holdings have a last price >= this value
HOLDING_ALERT_MIN_PRICE=1
# If true, automatically run a sell order via '!rsa sell {quantity} {ticker} {broker} false'
AUTO_SELL_LIVE=false
# Opt-in toggle for 15-minute ``..all`` refresh cadence during market hours
ENABLE_MARKET_REFRESH=false
# Comma-separated tickers to ignore for alert/auto-sell (e.g., ABCD,EFGH)
IGNORE_TICKERS=
# Optional override for ticker ignore list path (defaults to config/ignore_tickers.txt)
IGNORE_TICKERS_FILE=
# Comma-separated brokers to ignore for alert/auto-sell (e.g., Fidelity,Schwab)
IGNORE_BROKERS=
# Optional override for broker ignore list path (defaults to config/ignore_brokers.txt)
IGNORE_BROKERS_FILE=

# --- Mentions ---
# Provide one or more Discord IDs (comma-separated) to @-mention in alerts
# Example: MENTION_USER_IDS=123456789012345678,987654321098765432
MENTION_USER_IDS=
# Enable/disable mention on over-threshold holding alerts
MENTION_ON_ALERTS=true

# --- Tagged alert filters ---
# Optional comma-separated list restricting mentions to specific tickers.
# Format: TICKER or TICKER:MIN_QUANTITY (e.g., AAPL:50,TSLA)
TAGGED_ALERT_TICKERS=
# Optional override for tagged alert filter file (defaults to config/tagged_alerts.txt)
TAGGED_ALERTS_FILE=

# --- Persistence toggles ---
# Set to 'false' to disable writing to CSV, Excel, or SQL storage
CSV_LOGGING_ENABLED=true
EXCEL_LOGGING_ENABLED=true
SQL_LOGGING_ENABLED=true

# --- Automated trading (Not Yet Implemented) ---
# Enable the ULT-MA trading automation mode
ENABLE_AUTOMATED_TRADING=false
# Base URL and token for the auto-rsa service
AUTO_RSA_BASE_URL=
AUTO_RSA_API_KEY=
# Strategy toggles
TRADING_ALLOW_EXTENDED_TREND=false
TRADING_TREND_SAFEGUARD_ENABLED=true
TRADING_LOGGING_ENABLED=true
# Ordered list of broker identifiers for automated sell commands (e.g., Fidelity,Schwab)
TRADING_BROKERS=
# Trailing stop distance applied when ``allowExtendedTrend`` is active
TRADING_TRAILING_BUFFER=0.03
# Price polling interval (seconds)
TRADING_PRICE_CHECK_INTERVAL_SECONDS=300
