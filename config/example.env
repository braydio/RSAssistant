# --- Discord settings ---
BOT_TOKEN=your_discord_bot_token
BOT_PREFIX=..
DISCORD_PRIMARY_CHANNEL=0
DISCORD_SECONDARY_CHANNEL=0
DISCORD_TERTIARY_CHANNEL=0

# --- OpenAI reverse-split parsing (optional) ---
OPENAI_POLICY_ENABLED=false
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_TIMEOUT_SECONDS=20

# --- Storage ---
# Defaults to ./volumes when unset
VOLUMES_DIR=

# --- Auto holdings + monitor (optional) ---
AUTO_REFRESH_ON_REMINDER=false
HOLDING_ALERT_MIN_PRICE=1
AUTO_SELL_LIVE=false
ENABLE_MARKET_REFRESH=false
IGNORE_TICKERS=
IGNORE_TICKERS_FILE=
IGNORE_BROKERS=
IGNORE_BROKERS_FILE=

# --- Mentions ---
MENTION_USER_IDS=
MENTION_ON_ALERTS=true

# --- Tagged alert filters ---
TAGGED_ALERT_TICKERS=
TAGGED_ALERTS_FILE=

# --- Persistence toggles ---
CSV_LOGGING_ENABLED=true
EXCEL_LOGGING_ENABLED=true
SQL_LOGGING_ENABLED=true

# --- Plugins ---
# Comma-separated plugin slugs (e.g., ultma)
ENABLED_PLUGINS=

# --- Automated trading (ULT-MA plugin) ---
TRADING_ALLOW_EXTENDED_TREND=false
TRADING_TREND_SAFEGUARD_ENABLED=true
TRADING_LOGGING_ENABLED=true
TRADING_BROKERS=
TRADING_TRAILING_BUFFER=0.03
TRADING_PRICE_CHECK_INTERVAL_SECONDS=300
